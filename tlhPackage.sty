\ProvidesPackage{tlhPackage}

% \tlhe is a word or phrase used 'E'lsewhere in a definition.
% Only used in-line.
% usage: \tlhe{word}
\DeclareDocumentCommand \tlhe { m } {\textbf{\{#1\}}}
%\newcommand{\tlhe}[1]{\StrSubstitute{#1}{'}{asdf}}

% \tlhw is the Klingon 'W'ord(s) being defined, only as the first items on a line.
% Never used in-line.
\DeclareDocumentCommand \tlhw { m } {\large \tlhe{#1}\normalsize}

\DeclareDocumentCommand \tlhtr { m m }{\tlhe{#1} \textit{#2}}

% \tlhd is a list of 1 to 9 'D'efinitions of a word under a specific Part of Speech.
% Never used in-line.
% usage: \tlhd{Part of Speech}{First definition}[Second definition]
\DeclareDocumentCommand \tlhd { m m o o o o o o o }
{
  \textit{#1.}~
  \begin{inparaenum}[\bfseries 1.]%
  \IfNoValueTF {#3}{ #2 }{ \item~#2 }%
  \IfNoValueTF {#3}{}{ \item~#3 }%
  \IfNoValueTF {#4}{}{ \item~#4 }%
  \IfNoValueTF {#5}{}{ \item~#5 }%
  \IfNoValueTF {#6}{}{ \item~#6 }%
  \IfNoValueTF {#7}{}{ \item~#7 }%
  \IfNoValueTF {#8}{}{ \item~#8 }%
  \IfNoValueTF {#9}{}{ \item~#9 }%
  \end{inparaenum}
}

% \tlhc is the initial \textit{'C'anon: }.
% Never used in-line.
% \tlhca is a single use of the word in a 'CA'non sentence or phrase.
% Only used in-line.
% usage: \tlhc{Phrase}{Translation}{Source}
\newcommand{\tlhc}{\textit{Canon:~}}
\DeclareDocumentCommand \tlhca { m m m }{ \textsc{#3:} \tlhe{#1} #2 }

% \tlhf is a list of 1 to 9 canon books where the defined word can be 'F'ound.
% List the books in chronological order. Never used in-line.
% \tlhf{Initial source}[Additional source][Additional source]
\DeclareDocumentCommand \tlhf { m o o o o o o o o }
{
  \IfNoValueTF {#2}{ \textit{Found:~}\small\textsc{#1}\normalsize}{ \textit{Found:~}\small\textsc{#1},\normalsize}%
  \small%
  \IfNoValueTF {#2}{}{ \IfNoValueTF {#3}{ \textsc{#2}}{ \textsc{#2},}}%
  \IfNoValueTF {#3}{}{ \IfNoValueTF {#4}{ \textsc{#3}}{ \textsc{#3},}}%
  \IfNoValueTF {#4}{}{ \IfNoValueTF {#5}{ \textsc{#4}}{ \textsc{#4},}}%
  \IfNoValueTF {#5}{}{ \IfNoValueTF {#6}{ \textsc{#5}}{ \textsc{#5},}}%
  \IfNoValueTF {#6}{}{ \IfNoValueTF {#7}{ \textsc{#6}}{ \textsc{#6},}}%
  \IfNoValueTF {#7}{}{ \IfNoValueTF {#8}{ \textsc{#7}}{ \textsc{#7},}}%
  \IfNoValueTF {#8}{}{ \IfNoValueTF {#9}{ \textsc{#8}}{ \textsc{#8},}}%
  \IfNoValueTF {#9}{}{ \textsc{#9} }\normalsize\par
}

% \tlhcf is a list of 1 to 9 'C'on'F'erable (comparable) Klingon words.
% List the words in alphabetical order. Never used in-line.
% \tlhcf{Word}[word][word]
\DeclareDocumentCommand \tlhcf { m o o o o o o o o }
{
  \textit{Cf.~}\IfNoValueTF {#2}{ \tlhe{#1}}{ \tlhe{#1},}%
  \IfNoValueTF {#2}{}{ \IfNoValueTF {#3}{ \tlhe{#2}}{ \tlhe{#2},}}%
  \IfNoValueTF {#3}{}{ \IfNoValueTF {#4}{ \tlhe{#3}}{ \tlhe{#3},}}%
  \IfNoValueTF {#4}{}{ \IfNoValueTF {#5}{ \tlhe{#4}}{ \tlhe{#4},}}%
  \IfNoValueTF {#5}{}{ \IfNoValueTF {#6}{ \tlhe{#5}}{ \tlhe{#5},}}%
  \IfNoValueTF {#6}{}{ \IfNoValueTF {#7}{ \tlhe{#6}}{ \tlhe{#6},}}%
  \IfNoValueTF {#7}{}{ \IfNoValueTF {#8}{ \tlhe{#7}}{ \tlhe{#7},}}%
  \IfNoValueTF {#8}{}{ \IfNoValueTF {#9}{ \tlhe{#8}}{ \tlhe{#8},}}%
  \IfNoValueTF {#9}{}{ \tlhe{#9} }
}

% \tlhrf 'R'e'F'erences prose in a canon source related to the defined word.
% Never used in-line.
\DeclareDocumentCommand \tlhrf { m m o o }{ \IfNoValueTF{#4}{}{\textbf{#4}.} \IfNoValueTF{#3}{\textsc{#2}:}{\textsc{#2}~#3:}~``#1''}

% \tlhco provides 'CO'mmentary from a non-canon source related to the defined word.
\DeclareDocumentCommand \tlhco { m m o }{ \IfNoValueTF{#3}{\textbf{#2}:}{\textbf{#2}~#3:}~``#1''}

% \tlhpun makes obvious the 'PUN' in the defined word.
% Never used in-line.
\DeclareDocumentCommand \tlhpun { m }{ \textit{Pun:} ``#1''}
